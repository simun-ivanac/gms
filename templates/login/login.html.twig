{% extends "base.html.twig" %}

{# Title #}
{% block title %}Login{% endblock %}

{# Content #}
{% block content %}
	<form method="post" class="form form-login">
		{% if loginError %}
			<ul class="form-errors login">
				<li class="form-error-message">{{ loginError.messageKey|trans(loginError.messageData, 'security') }}</li>
			</ul>
		{% endif %}

		<h1 class="heading main-heading heading-login-member">Imposter... or not?</h1>

		<div class="flash-messages">
			<div class="notice warning">
				<p class="notice-message">
					<span>User: <i>groot@avengers.example</i></span>
					<br>
					<span>Password: <i>we are groot!</i></span>
				</p>
			</div>
		</div>

		<div class="form-group email">
			<label class="form-label" for="username">Email</label>
			<input type="email" value="{{ lastUsername }}" name="_username" id="username" class="form-input" autocomplete="email" required autofocus>
		</div>

		<div class="form-group password">
			<label class="form-label" for="password">Password</label>
			<input type="password" name="_password" id="password" class="form-input" autocomplete="current-password" required>
		</div>

		{# <div class="form-group remember-me">
			<label class="form-label" for="_remember_me">Remember me</label>
			<input type="checkbox" name="_remember_me" id="_remember_me" class="form-input">
		</div> #}

		<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

		<div class="form-group submit">
			<button type="submit" class="button submit-btn">Log in</button>
		</div>
	</form>
{% endblock %}
