{
	"commit-msg": {
		"enabled": true,
		"actions": [
			{
				"action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
				"options": {
					"subjectLength": 50,
					"bodyLineLength": 72,
					"checkImperativeBeginningOnly": true
				}
			}
		]
	},
	"pre-commit": {
		"enabled": true,
		"actions": [
			{
				"action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
			},
			{
				"action": "@php ./vendor/bin/phpcs --runtime-set testVersion 8.2-"
			}
		]
	}
}
